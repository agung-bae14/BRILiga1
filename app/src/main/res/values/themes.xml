<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LigaSatu" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Color -->
         <item name="colorPrimary">@color/primary</item>
         <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary Color -->
         <item name="colorSecondary">@color/secondary</item>
         <item name="colorOnSecondary">@color/onSecondary</item>
    </style>
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Primary Color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="android:textColorPrimary">@color/onPrimary</item>
        <!-- Secondary Color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

    </style>
    <style name="Theme.LigaSatu" parent="Base.Theme.LigaSatu" />
    
    <style name="TextJudul">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextJudul.gelap">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextJudul.terang">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextSubJudul">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextSubJudul.gelap">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextIsi">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextIsi.gelap">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextContent.BodyMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

</resources>